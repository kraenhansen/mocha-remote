{
  "name": "mocha-remote-server",
  "version": "1.0.0",
  "description": "Run Mocha tests somewhere - get reporting elsewhere",
  "scripts": {
    "build": "../../node_modules/.bin/tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "prepack": "cp ../../README.md .",
    "test": "mocha **/*.test.ts"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Kr√¶n Hansen",
    "email": "mail@kraenhansen.dk",
    "url": "https://github.com/kraenhansen"
  },
  "keywords": [
    "mocha"
  ],
  "repository": "github:kraenhansen/mocha-remote",
  "bugs": "https://github.com/kraenhansen/mocha-remote/issues",
  "license": "ISC",
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/ws": "^7.4.0",
    "chai": "^4.3.4",
    "mocha": "../../node_modules/mocha",
    "typed-emitter": "^1.3.1"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "flatted": "^3.1.1",
    "mocha-remote-common": "^1.0.0",
    "ws": "^7.4.4"
  },
  "peerDependencies": {
    "mocha": "^8"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/**/*.test.ts",
    "require": "ts-node/register"
  }
}

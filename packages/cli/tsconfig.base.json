{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "lib": ["es2022"],
    "types": [
      "node",
      "yargs",
      "yargs/helpers"
    ],
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}

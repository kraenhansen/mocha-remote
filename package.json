{
  "name": "mocha-remote",
  "private": true,
  "description": "Run Mocha tests somewhere - get reporting elsewhere",
  "scripts": {
    "test": "lerna exec --concurrency 1 -- npm test",
    "test/dist": "mocha --opts configs/mocha.opts integration-tests/dist.test.ts",
    "build": "lerna exec -- npm run build",
    "prepublishOnly": "npm run build",
    "publish": "npx lerna publish",
    "prepare": "lerna bootstrap --concurrency 1"
  },
  "author": {
    "name": "Kr√¶n Hansen",
    "email": "mail@kraenhansen.dk",
    "url": "https://github.com/kraenhansen"
  },
  "keywords": [
    "mocha"
  ],
  "repository": "github:kraenhansen/mocha-remote",
  "bugs": "https://github.com/kraenhansen/mocha-remote/issues",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "lerna": "^4.0.0",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "ws": "^7.4.6"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "**/dist/",
      "packages/integration-tests/environments/"
    ],
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es2017": true
    },
    "rules": {
      "no-console": "warn"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "parser": "@typescript-eslint/parser",
        "extends": [
          "eslint:recommended",
          "plugin:@typescript-eslint/recommended",
          "prettier"
        ]
      },
      {
        "files": "scripts/*.js",
        "env": {
          "node": true
        }
      },
      {
        "files": "**/*.test.js",
        "env": {
          "mocha": true
        }
      }
    ]
  }
}

{
  "name": "mocha-remote",
  "version": "0.9.0",
  "description": "Run Mocha tests somewhere - get reporting elsewhere",
  "scripts": {
    "cli/install": "cd packages/cli; npm install",
    "cli/package": "cd packages/cli; npm pack",
    "cli/publish": "cd packages/cli; npm publish",
    "client/install": "cd packages/client; npm install",
    "client/build": "cd packages/client; npm run build/node && npm run build/webpack",
    "client/package": "cd packages/client; npm pack",
    "client/publish": "cd packages/client; npm publish",
    "server/install": "cd packages/server; npm install",
    "server/build": "cd packages/server; tsc -p tsconfig.json",
    "server/package": "cd packages/server; npm pack",
    "server/publish": "cd packages/server; npm publish",
    "test": "mocha --opts configs/mocha.opts packages/*/src/**/*.test.ts packages/cli/test/*.test.js integration-tests/**/*.test.ts",
    "test/dist": "mocha --opts configs/mocha.opts integration-tests/dist.test.ts",
    "build": "npm run client/build && npm run server/build",
    "package": "npm run cli/package && npm run client/package && npm run server/package",
    "version": "node scripts/update-versions.js && git add packages/*/package*.json",
    "postversion": "git push --tags",
    "postinstall": "node scripts/postinstall.js",
    "prepublishOnly": "npm run build",
    "prepare": "npm run client/install; npm run server/install",
    "postpublish": "npm run cli/publish && npm run client/publish && npm run server/publish"
  },
  "author": {
    "name": "KrÃ¦n Hansen",
    "email": "mail@kraenhansen.dk",
    "url": "https://github.com/kraenhansen"
  },
  "keywords": [
    "mocha"
  ],
  "repository": "github:kraenhansen/mocha-remote",
  "bugs": "https://github.com/kraenhansen/mocha-remote/issues",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.5.2",
    "@types/ws": "^5.1.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha-remote-client": "./packages/client",
    "mocha-remote-server": "./packages/server",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "ws": "^5.2.2"
  }
}

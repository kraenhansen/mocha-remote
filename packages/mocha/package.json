{
  "name": "mocha-remote-mocha",
  "version": "1.8.0",
  "type": "commonjs",
  "private": true,
  "description": "An internal simplified version of Mocha to be used from a client",
  "scripts": {
    "build": "webpack",
    "test": "echo 'No tests to run'"
  },
  "main": "dist/node/mocha.js",
  "browser": "dist/browser/mocha.js",
  "types": "index.d.ts",
  "author": {
    "name": "Kr√¶n Hansen",
    "email": "mail@kraenhansen.dk",
    "url": "https://github.com/kraenhansen"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "process": "^0.11.10",
    "util": "^0.12.4",
    "webpack": "^5.105.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.8.0"
  },
  "peerDependency": {
    "debug": "^4.3.3"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "commonjs"
    },
    "env": {
      "commonjs": true
    },
    "rules": {
      "@typescript-eslint/no-var-requires": "off"
    },
    "overrides": [
      {
        "files": "webpack.config.js",
        "env": {
          "node": true
        }
      }
    ]
  }
}

{
  "name": "mocha-remote-expo-example",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test:android": "mocha-remote -- expo start --android",
    "test:ios": "mocha-remote -- expo start --ios",
    "test:web": "mocha-remote -- expo start --web"
  },
  "nx": {
    "targets": {
      "test:android": {
        "dependsOn": [
          "^build"
        ]
      },
      "test:ios": {
        "dependsOn": [
          "^build"
        ]
      },
      "test:web": {
        "dependsOn": [
          "^build"
        ]
      }
    }
  },
  "dependencies": {
    "expo": "~49.0.15",
    "expo-status-bar": "~1.6.0",
    "mocha-remote": "1.7.0",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@types/react": "~18.2.14",
    "react-native-web": "~0.19.6",
    "react-dom": "18.2.0",
    "@expo/webpack-config": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0"
  }
}
